<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/custom_gri_button_pressed" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/custom_gri_button_enabled_false" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/custom_gri_button_normal" />
        </shape>
    </item>
</selector>