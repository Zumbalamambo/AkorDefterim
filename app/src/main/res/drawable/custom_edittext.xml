<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_focused="true">
	    <shape>
		    <gradient android:startColor="#eaebeb"
		        android:endColor="#dadcdc"
		        android:centerX="0.5"
		        android:centerY="0.5"
		        android:angle="270" />
		    <stroke android:width="1dp" android:color="#389ec7" />
		    <corners android:radius="3dp" />
		    <padding android:left="10dp"
		        android:top="4dp"
		        android:right="10dp"
		        android:bottom="4dp" />
		</shape>
	</item>
	
	<item>
		<shape>
			<gradient android:startColor="#eaebeb"
			    android:endColor="#dadcdc"
			    android:angle="270" />
			<stroke android:width="1dp" android:color="#717172" />
			<corners android:radius="3dp" />
		</shape>
	</item>
</selector>