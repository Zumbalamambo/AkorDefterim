<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:background="@color/Beyaz">

	<android.support.constraint.Guideline
		android:id="@+id/v_guideline1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5" />

	<TextView
		android:id="@+id/lblDialogBaslik"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:text="@string/labeltire"
		android:textColor="@color/KoyuYazi"
		style="@style/TextAppearance.AppCompat.Medium.Inverse"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/view1"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:layout_marginTop="8dp"
		android:background="@drawable/cizgi_ortagri"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/lblDialogBaslik" />

	<android.support.design.widget.TextInputLayout
		android:id="@+id/txtILDialogInput"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="24dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="24dp"
		android:textColorHint="@color/KoyuGri"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view1">

		<EditText
			android:id="@+id/txtDialogInput"
			style="@style/TextAppearance.AppCompat.Small.Inverse"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:inputType="text"
			android:textColor="@color/KoyuYazi" />
	</android.support.design.widget.TextInputLayout>

	<View
		android:id="@+id/view2"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:layout_marginTop="32dp"
		android:background="@drawable/cizgi_ortagri"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtILDialogInput" />

	<Button
		android:id="@+id/btnDialogButton1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@drawable/custom_button2"
		android:gravity="center"
		android:text="@string/labeltire"
		android:textAppearance="@style/TextAppearance.AppCompat"
		android:textColor="@color/KoyuYazi"
		style="@style/TextAppearance.AppCompat.Medium.Inverse"
		app:layout_constraintEnd_toStartOf="@+id/v_guideline1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view2" />

	<Button
		android:id="@+id/btnDialogButton2"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@drawable/custom_button2"
		android:gravity="center"
		android:text="@string/labeltire"
		android:textAppearance="@style/TextAppearance.AppCompat"
		android:textColor="@color/KoyuYazi"
		style="@style/TextAppearance.AppCompat.Medium.Inverse"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/v_guideline1"
		app:layout_constraintTop_toBottomOf="@+id/view2" />

</android.support.constraint.ConstraintLayout>