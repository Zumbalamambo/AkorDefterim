<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/coordinatorLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/Beyaz">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:keepScreenOn="true">

		<android.support.constraint.Guideline
			android:id="@+id/v_guideline1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.05" />

		<android.support.constraint.Guideline
			android:id="@+id/v_guideline2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.95" />

		<android.support.constraint.Guideline
			android:id="@+id/h_guideline1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.085" />

		<ImageButton
			android:id="@+id/btnGeri"
			android:layout_width="60dp"
			android:layout_height="0dp"
			android:background="@drawable/custom_button2"
			app:layout_constraintBottom_toTopOf="@+id/view1"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/ic_arrow_back_siyah"
			android:contentDescription="@string/imageDesc" />

		<TextView
			android:id="@+id/lblBaslik"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="12dp"
			android:layout_marginLeft="12dp"
			android:text="@string/dogrulama_kodu"
			android:textColor="@color/KoyuYazi"
			android:textSize="@dimen/yazi_boyutu18"
			app:layout_constraintBottom_toTopOf="@+id/view1"
			app:layout_constraintStart_toEndOf="@+id/btnGeri"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/lblVazgec"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			android:text="@string/vazgec"
			android:textAppearance="@style/TextAppearance.AppCompat.Button"
			android:textColor="@color/AcikMavi3"
			app:layout_constraintBottom_toTopOf="@+id/h_guideline1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<View
			android:id="@+id/view1"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:background="@drawable/line2"
			app:layout_constraintTop_toTopOf="@+id/h_guideline1" />

		<TextView
			android:id="@+id/lblOnayKoduAciklama"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:text="@string/onay_kodu_email"
			android:textColor="@color/KoyuGri"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
			app:layout_constraintTop_toTopOf="@+id/view1" />

		<com.mhk.android.passcodeview.PasscodeView
			android:id="@+id/txtOnayKodu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="24dp"
			android:layout_marginLeft="0dp"
			android:layout_marginStart="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginEnd="0dp"
			app:digitColorBorder="@color/KoyuYazi"
			app:digitColorFilled="@color/AcikMavi3"
			app:numDigits="6"
			app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/lblOnayKoduAciklama"
			app:layout_constraintRight_toLeftOf="@+id/v_guideline2" />

		<TextView
			android:id="@+id/lblOnayKoduKalanSure"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="0dp"
			android:layout_marginStart="0dp"
			android:layout_marginTop="24dp"
			android:text="@string/kalan_sure"
			android:textColor="@color/KoyuGri"
			app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/txtOnayKodu" />

		<TextView
			android:id="@+id/lblYenidenGonder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:text="@string/yeniden_gonder"
			android:textAppearance="@style/TextAppearance.AppCompat.Button"
			android:textColor="@color/AcikMavi3"
			app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/lblOnayKoduKalanSure" />

		<Button
			android:id="@+id/btnDogrula"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_marginTop="24dp"
			android:background="@drawable/custom_button_mavi"
			android:drawableEnd="@drawable/ic_btn_arrow_forward"
			android:drawableRight="@drawable/ic_btn_arrow_forward"
			android:paddingEnd="5dp"
			android:paddingRight="5dp"
			android:text="@string/dogrula"
			android:textAppearance="@style/TextAppearance.AppCompat"
			android:textColor="@color/Beyaz"
			app:layout_constraintRight_toLeftOf="@+id/v_guideline2"
			app:layout_constraintTop_toBottomOf="@+id/txtOnayKodu" />

	</android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>