<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/coordinatorLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/Beyaz">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:keepScreenOn="true">

		<android.support.constraint.Guideline
			android:id="@+id/v_guideline1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.05"
			tools:layout_editor_absoluteX="21dp"
			tools:layout_editor_absoluteY="25dp" />

		<android.support.constraint.Guideline
			android:id="@+id/v_guideline2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.95"
			tools:layout_editor_absoluteX="391dp"
			tools:layout_editor_absoluteY="25dp" />

		<android.support.constraint.Guideline
			android:id="@+id/h_guideline1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.1" />

		<Button
			android:id="@+id/btnGeri"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_marginBottom="8dp"
			android:background="@drawable/ic_arrow_back_siyah"
			app:layout_constraintBottom_toTopOf="@+id/h_guideline1"
			app:layout_constraintLeft_toLeftOf="@+id/v_guideline1" />

		<TextView
			android:id="@+id/lblBaslik"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			android:text="@string/giris_yardimi"
			android:textColor="@color/KoyuYazi"
			android:textSize="@dimen/yazi_boyutu22"
			app:layout_constraintBaseline_toBaselineOf="@+id/btnGeri"
			app:layout_constraintStart_toEndOf="@+id/btnGeri" />

		<View
			android:id="@+id/view1"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_marginTop="8dp"
			android:background="@drawable/line2"
			app:layout_constraintTop_toTopOf="@+id/h_guideline1" />

		<TextView
			android:id="@+id/lblHesabinaEris"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:text="@string/hesabina_eris"
			android:textColor="@color/KoyuYazi"
			android:textSize="@dimen/yazi_boyutu22"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/view1" />

		<View
			android:id="@+id/view2"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:background="@drawable/line2"
			android:layout_marginTop="8dp"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/lblHesabinaEris" />

		<Button
			android:id="@+id/btnKullaniciAdiVeyaEPosta"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="@drawable/custom_button2"
			android:drawableStart="@drawable/user_icon"
			android:drawableLeft="@drawable/user_icon"
			android:drawablePadding="10dp"
			android:gravity="left|center_vertical"
			android:text="@string/kullanici_adi_veya_eposta_kullan"
			android:textAppearance="@style/TextAppearance.AppCompat"
			android:textColor="@color/KoyuYazi"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/view2" />

		<View
			android:id="@+id/view3"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:background="@drawable/line2"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/btnKullaniciAdiVeyaEPosta" />

		<Button
			android:id="@+id/btnSmsGonder"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="@drawable/custom_button2"
			android:drawableStart="@drawable/user_icon"
			android:drawableLeft="@drawable/user_icon"
			android:drawablePadding="10dp"
			android:gravity="left|center_vertical"
			android:text="@string/kullanici_adi_veya_eposta_kullan"
			android:textAppearance="@style/TextAppearance.AppCompat"
			android:textColor="@color/KoyuYazi"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/view3" />

		<View
			android:id="@+id/view4"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:background="@drawable/line2"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/btnSmsGonder" />

		<TextView
			android:id="@+id/lblYardimMerkezi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:text="@string/yardim_merkezi"
			android:textColor="@color/KoyuYazi"
			android:textSize="@dimen/yazi_boyutu22"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/view4" />

		<View
			android:id="@+id/view5"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:background="@drawable/line2"
			android:layout_marginTop="8dp"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/lblYardimMerkezi" />

		<Button
			android:id="@+id/btnAkorDefterimYardimMerkezi"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="@drawable/custom_button2"
			android:drawableStart="@android:drawable/ic_menu_help"
			android:drawableLeft="@android:drawable/ic_menu_help"
			android:drawablePadding="10dp"
			android:gravity="left|center_vertical"
			android:text="@string/s_yardim_merkezi"
			android:textAppearance="@style/TextAppearance.AppCompat"
			android:textColor="@color/KoyuYazi"
			app:layout_constraintEnd_toStartOf="@+id/v_guideline2"
			app:layout_constraintStart_toStartOf="@+id/v_guideline1"
			app:layout_constraintTop_toBottomOf="@+id/view5" />
	</android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>